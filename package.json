{
  "name": "routers-api",
  "version": "2.0.6",
  "description": "An express module that helps node-express developers with a router api mechanism. Dynamically creates routes on the fly, starting with the default directory \"./routes\".",
  "main": "index.js",
  "browser": "browser-shim.js",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "test": "nyc mocha --compilers js:babel-core/register --recursive -R spec tests",
    "report-coverage": "npm test && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/Joaquin6/routers-api.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "routes",
    "express",
    "routes-api",
    "dynamic",
    "dynamic-routes",
    "dynamic-express-routes"
  ],
  "author": "Joaquin Briceno",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Joaquin6/routers-api/issues"
  },
  "homepage": "https://github.com/Joaquin6/routers-api#readme",
  "devDependencies": {
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^1.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-security": "^1.4.0",
    "express": "^4.10.6",
    "jest": "^24.9.0",
    "pre-commit": "^1.2.2",
    "semantic-release-cli": "^5.2.3",
    "supertest": "^0.15.0",
    "validate-commit-msg": "^2.8.0"
  }
}
